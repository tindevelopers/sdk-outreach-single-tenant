# API Keys
OUTSCRAPER_API_KEY=your_outscraper_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Google Services
GOOGLE_SHEETS_CREDENTIALS_PATH=path/to/google/credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/sdk_outreach
REDIS_URL=redis://localhost:6379/0

# Email Services
SENDGRID_API_KEY=your_sendgrid_api_key
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain

# LinkedIn (Optional - for enhanced scraping)
LINKEDIN_USERNAME=your_linkedin_username
LINKEDIN_PASSWORD=your_linkedin_password

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# AI Configuration
DEFAULT_AI_MODEL=anthropic/claude-3.5-sonnet
AI_TEMPERATURE=0.7
MAX_TOKENS=4000